package Omicron

use GWOLLUM      v2r3p13

set OMICRONLIBPATH "$(OMICRONROOT)/$(Omicron_tag)/lib64"
set OMICRONINCPATH "$(OMICRONROOT)/$(Omicron_tag)/include"

macro_prepend pkgconfig_path "$(OMICRONLIBPATH)/pkgconfig/:"

macro  Omicron_linkopts " -L$(OMICRONLIBPATH) -lOmicronUtils -lOmicron"
macro+ Omicron_linkopts " -Wl,-rpath,$(OMICRONLIBPATH)"

include_path $(OMICRONINCPATH)

setup_script $(OMICRONROOT)/$(Omicron_tag)/$(CMTCONFIG)/etc/omicron.env

document pb_build       "omicron-2.3.13"

