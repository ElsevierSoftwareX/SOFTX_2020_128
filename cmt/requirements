package Omicron

use VirgoPolicy v2r5
use root
use GWOLLUM v0r4

#### LOCALS

set OMICRON_HTML       "$(OMICRONROOT)/html"
set OMICRON_PARAMETERS "$(OMICRONROOT)/parameters"
set OMICRON_DOC        "$(OMICRONROOT)/doc"
set OMICRON_SCRIPTS    "$(OMICRONROOT)/scripts"
set OMICRON_BIN        "$(OMICRONROOT)/bin"
set OMICRON_LIB        "$(OMICRONROOT)/lib"

set OMICRON_TRIGGERS        ""\
    Florent		    "/home/florent/Analysis/Omicron/triggers"\
    Cascina		    "/virgoData/Omicron"\
    CCIN2P3		    "/sps/virgo/USERS/frobinet/Omicron/triggers"
set OMICRON_ONLINE_TRIGGERS ""\
    Cascina		    "/data/procdata/bufferv29/OnlineOmicron"
set OMICRON_WEB             ""\
    Florent		    "/home/florent/Analysis/Omicron/web"\
    Cascina		    "/data/procdata/bufferv16/Omicron/Omicron"
set OMICRON_TRIGGERS_BASE   "100000"

#### for the environment
path_prepend LD_LIBRARY_PATH "$(OMICRONROOT)/$(Omicron_tag):$(LIGOTOOLS)/lib"
path_prepend PATH "$(OMICRONROOT)/$(Omicron_tag):$(OMICRONROOT)/scripts:$(LIGOTOOLS)/bin"
macro_prepend RPATH "$(OMICRONROOT)/$(Omicron_tag):"

#### alias scripts
alias GetOmicronChannels   "$(OMICRONROOT)/scripts/GetOmicronChannels.sh"
alias GetOmicronTriggers   "$(OMICRONROOT)/scripts/GetOmicronTriggers.sh"
alias GetTriggerFileList   "$(OMICRONROOT)/scripts/GetTriggerFileList.sh"
alias GetOmicronPlots      "$(OMICRONROOT)/scripts/GetOmicronPlots.sh"
alias GetOmicronWeb        "$(OMICRONROOT)/scripts/GetOmicronWeb.sh"
alias GetOmicronScan       "$(OMICRONROOT)/scripts/GetOmicronScan.sh"
alias MakeOmicronWeb       "$(OMICRONROOT)/scripts/MakeOmicronWeb.sh"
alias GetOmicronDAG        "$(OMICRONROOT)/scripts/GetOmicronDAG.sh"

#### dictionaries generation
document rootcint OmicronDict Omicron.h LinkDef.h

#### libraries generation
macro_append Omicron_shlibflags " -L$(GWOLLUMROOT)/$(GWOLLUM_tag) -lNetwork -lSegments -lInject -lOmicronToolBox" 
library Omicron -no_prototypes -no_static Omicron.cc -s=../$(Omicron_tag) OmicronDict.cc

#### Applications generation
macro  Omicron_linkopts "-L$(OMICRONROOT)/$(Omicron_tag) -lOmicron"

application omicron omicron.cc
alias omicron             "$(OMICRONROOT)/$(Omicron_tag)/omicron.exe"
application omicronplot omicronplot.cc
alias omicronplot         "$(OMICRONROOT)/$(Omicron_tag)/omicronplot.exe"
